{% extends 'layouts/content/members-area.html.twig' %}

{% block title %}{{ 'Edit'|trans }} | {{ 'Posts'|trans }} | {{ parent() }}{% endblock %}

{% block main %}
	<h1>
		{{ 'Edit Post'|trans }}
		<a class="btn btn-primary btn-sm"
            href="{{ url('members-area.posts.new') }}">
            {{ 'New'|trans }}
        </a>
		<br />
		<small>{{ post }}</small>
	</h1>
	<ol class="breadcrumb">
		<li>
			<a href="{{ url('members-area') }}">
				{{ 'Home' | trans }}
			</a>
		</li>
		<li>
			<a href="{{ url('members-area.posts') }}">
				{{ 'Posts' | trans }}
			</a>
		</li>
		<li class="active">
			{{ 'Edit' | trans }}
		</li>
	</ol>
	{% include 'contents/members-area/posts/_form.html.twig' %}
{% endblock %}
